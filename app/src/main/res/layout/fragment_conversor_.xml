<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Conversor_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="226dp"
            android:layout_height="221dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="93dp"
            android:src="@drawable/appimagen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Selecciona las unidades a convertir"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPeso"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="323dp"
            android:text="Peso"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLongitud"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="249dp"
            android:text="Longitud"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTemperatura"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="175dp"
            android:text="Temperatura"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnVolumen"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="101dp"
            android:text="Volumen"
            android:textSize="18dp"
            android:textStyle="bold" />



    </RelativeLayout>


</FrameLayout>