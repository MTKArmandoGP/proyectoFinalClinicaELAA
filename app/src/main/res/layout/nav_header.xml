<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@color/material_dynamic_primary90"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IvfotoPerfil_nav"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:src="@drawable/trabajoenequipo" />

        <TextView
            android:id="@+id/tvUsuario_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinica Familiar ELAA"
            android:textColor="@color/AzulFinal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvcorreoUsurio_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ejemplo@gmail.com"
            android:textColor="@color/AzulFinal"
            android:textSize="14sp" />

    </LinearLayout>




</LinearLayout>