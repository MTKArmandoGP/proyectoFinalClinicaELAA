<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".registro_doctores">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nombre_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="22dp"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtnombre_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_person_24"
                    android:textColor="@color/AzulFinal" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/apellido_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_register_doctores"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Apellido"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtapellido_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_person_24"
                    android:textColor="@color/AzulFinal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apellido_register_doctores"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Correo"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtemail_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_email_24"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/AzulFinal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/telefono_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_register_doctores"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Telefono"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txttelefono_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_local_phone_24"
                    android:inputType="number"
                    android:textColor="@color/AzulFinal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usuario_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefono_register_doctores"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Usuario"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtusuario_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_person_24"
                    android:textColor="@color/AzulFinal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contrase単a_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usuario_register_doctores"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Contrase単a"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtcontrase単a_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/AzulFinal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cedula_register_doctores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contrase単a_register_doctores"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="Clave de Registro"
                android:textColorHint="@color/AzulFinal"
                app:boxBackgroundColor="#7EFFFFFF"
                app:boxStrokeColor="@color/AzulFinal"
                app:hintTextColor="@color/AzulFinal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtcedula_register_doctores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_person_24"
                    android:textColor="@color/AzulFinal" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_registrar_doctores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cedula_register_doctores"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="30dp"
                android:elevation="100dp"
                android:text="Registrar"
                android:textSize="20sp"
                android:fontFamily="@font/ketikan_demo"/>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>